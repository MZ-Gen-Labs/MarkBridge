@inherits LayoutComponentBase
@inject Services.AppStateService AppState
@implements IDisposable

<div class="d-flex flex-column vh-100">
    @if (isInitializing)
    {
        <!-- Initialization Loading Overlay -->
        <div class="position-fixed top-0 start-0 w-100 h-100 d-flex flex-column align-items-center justify-content-center bg-body" style="z-index: 9999;">
            <div class="text-center">
                <div class="mb-4">
                    <i class="bi bi-file-earmark-text display-1 text-primary"></i>
                </div>
                <h2 class="mb-3">MarkBridge</h2>
                <div class="spinner-border text-primary mb-3" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="text-muted">@initializationStatus</p>
            </div>
        </div>
    }
    else
    {
    <!-- Tab Navigation -->
    <nav class="navbar navbar-expand bg-body-tertiary border-bottom px-3">
        <span class="navbar-brand mb-0 h1">
            <i class="bi bi-file-earmark-text me-2"></i>MarkBridge
        </span>
        <ul class="nav nav-pills ms-3">
            <li class="nav-item">
                <a class="nav-link @(currentTab == "convert" ? "active" : "")" 
                   href="javascript:void(0)" @onclick='() => SwitchTab("convert")'>
                    <i class="bi bi-arrow-repeat me-1"></i>Convert
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(currentTab == "files" ? "active" : "")" 
                   href="javascript:void(0)" @onclick='() => SwitchTab("files")'>
                    <i class="bi bi-folder2-open me-1"></i>Files & Editor
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(currentTab == "settings" ? "active" : "")" 
                   href="javascript:void(0)" @onclick='() => SwitchTab("settings")'>
                    <i class="bi bi-gear me-1"></i>Settings
                </a>
            </li>
        </ul>
    </nav>

    <!-- Main Content -->
    <main class="flex-grow-1 overflow-auto bg-body">
        @switch (currentTab)
        {
            case "convert":
                <MarkBridge.Components.Pages.Convert />
                break;
            case "files":
                <MarkBridge.Components.Pages.FilesEditor />
                break;
            case "settings":
            default:
                <MarkBridge.Components.Pages.Settings />
                break;
        }
    </main>

    <!-- Status Bar -->
    <footer class="status-bar d-flex align-items-center justify-content-between px-3 py-1 bg-body-secondary border-top">
        <div class="d-flex align-items-center">
            @if (AppState.IsProcessing)
            {
                <div class="spinner-border spinner-border-sm text-primary me-2" role="status">
                    <span class="visually-hidden">Processing...</span>
                </div>
            }
            else
            {
                <i class="bi bi-check-circle-fill text-success me-2"></i>
            }
            <span class="small">@AppState.StatusMessage</span>
        </div>
        <div class="d-flex align-items-center">
            @if (AppState.IsVenvActive)
            {
                <span class="badge bg-success me-2">
                    <i class="bi bi-check-circle me-1"></i>venv Active
                </span>
            }
            else
            {
                <span class="badge bg-warning text-dark me-2">
                    <i class="bi bi-exclamation-triangle me-1"></i>venv Not Configured
                </span>
            }
            @if (!string.IsNullOrEmpty(AppState.PythonVersion))
            {
                <span class="small text-muted">Python @AppState.PythonVersion</span>
            }
        </div>
    </footer>
    }
</div>

@code {
    private string currentTab = "settings";
    private Action? _stateHandler;
    private bool isInitializing = true;
    private string initializationStatus = "起動中...";
    private bool hasInitialized = false;

    [Inject] private IJSRuntime JS { get; set; } = default!;

    protected override void OnInitialized()
    {
        _stateHandler = async () => await InvokeAsync(StateHasChanged);
        AppState.OnChange += _stateHandler;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Apply saved theme first
            await JS.InvokeVoidAsync("setTheme", AppState.Theme);
            
            // Run initialization after first render so loading screen is visible
            await RunInitializationAsync();
        }
    }

    private async Task RunInitializationAsync()
    {
        if (hasInitialized) return;
        hasInitialized = true;
        
        try
        {
            // Step 1: Load settings
            initializationStatus = "設定を読み込み中...";
            StateHasChanged();
            await Task.Delay(300); // Show status for a moment
            
            await AppState.InitializeAsync();
            
            // Step 2: Check Python environment
            initializationStatus = "Python環境を確認中...";
            StateHasChanged();
            await Task.Delay(500); // Show status for a moment
            
            // Set initial tab based on setup status
            if (AppState.IsVenvActive)
            {
                currentTab = "convert";
            }
            
            // Initialization complete
            isInitializing = false;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            initializationStatus = $"エラー: {ex.Message}";
            StateHasChanged();
        }
    }

    private void SwitchTab(string tab)
    {
        currentTab = tab;
        StateHasChanged();
    }

    public void Dispose()
    {
        if (_stateHandler != null)
        {
            AppState.OnChange -= _stateHandler;
        }
    }
}
